{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/cdis0001/cdis0001.github.io/main/data/tertiary.csv"
  },
  "repeat": {
    "layer": ["Sub-Saharan Africa",
              "Middle East & North Africa",
              "Europe & Central Asia",
              "East Asia & Pacific",
              "South Asia",
              "North America",
              "Latin America & Caribbean"]
  },
  "spec": {
    "mark": "line",
    "encoding": {
      "x": {
        "field": "Year",
        "type": "quantitative"
      },
      "y": {
        "field": {"repeat": "layer"},
        "type": "quantitative",
        "title": "Number of Enrolments"
      },
      "color": {
        "datum": {"repeat": "layer"},
        "type": "nominal"
      }
    }
  }
}
