{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "A Measure of Peace and Prosperity Relating to Our Happiness",
  "width": "container",
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/cdis0001/cdis0001.github.io/main/data/file_name2.csv"
  },
  "encoding": {
    "x": {
      "field": "Freedom to make life choices",
      "type": "quantitative",
      "title": "Freedom to make life choices",
      "axis": {"tickCount": 7}
    },
    "y": {
      "field": "PeaceIndex",
      "type": "quantitative",
      "title": "Unrest Index",
      "axis": {"tickCount": 6}
    }
  },
  "layer": [
    {
      "selection": {
        "region_selection": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "color": {"field": "Region", "type": "nominal"},
        "opacity": {
          "condition": {"selection": "region_selection", "value": 0.6},
          "value": 0.2
        },
         "color": {
          "field": "Region",
          "type": "nominal",
          "scale": {
     "domain": [
              "East Asia & Pacific",
              "Europe & Central Asia",
              "South Asia",
              "Latin America & Caribbean",
              "North America",
              "Middle East & North Africa",
              "Sub-Saharan Africa"
            ],
            "range": [
              "#E69F00",
              "#56B4E9",
              "#009E73",
              "#F0E442",
              "#0072B2",
              "#D55E00",
              "#CC79A7"
            ]}
        },
        "size": {
          "field": "Perceptions of corruption",
          "type": "quantitative",
          "scale":{"type": "threshold",
                    "domain": [0, 0.1, 0.2, 0.3, 0.4],
                      "range": [25, 75, 125, 250, 500, 1000]

}
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Score", "type": "quantitative", "format": ".2f",
          "title": "Happiness Score"},
          {"field": "PeaceIndex", "type": "quantitative", "format": ".2f",
          "title": "Unrest Index"},
          {"field": "Freedom to make life choices", "type": "quantitative", "title": "Freedom Index","format": ".2f"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 3,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Iceland' || datum['Country'] == 'Syria'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}
