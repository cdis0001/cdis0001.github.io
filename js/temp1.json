 {
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Life expectancy vs Happiness Score",
  "data": {
    "url": "https://raw.githubusercontent.com/cdis0001/cdis0001.github.io/main/data/2020.csv"
  },
  "encoding": {
  "x":{
    "field":"Healthy life expectancy",
    "type":"quantitative",
    "title":"Life Expectancy",
    "axis": {"tickCount": 7},
    "scale": {"domain": [40,85]}
  },
  "y":{
    "field": "Score",
    "type": "quantitative",
    "title": "Happiness Score",
    "axis": {"tickCount": 6},
    "scale": {"domain": [2,8]}
    }
  },
  "layer":[
    {
      "selection": {
        "region_selection":{
          "type": "multi",
          "fields": ["Regional indicator"],
          "bind":"legend"
        }
      },

      "mark": "circle",
      "encoding": {
        "color":{
          "field": "Regional indicator",
          "type":"nominal"
        },

        "opacity":{
          "condition": {"selection": "region_selection", "value": 0.6},
          "value":0.2
        },

        "size":{
          "field": "Freedom to make life choices",
          "type": "quantitative"
        },

        "tooltip":[
          {"field": "Country name", "type": "nominal"},
          {"field": "Score", "type": "quantitative"},
          {"field": "Score", "type": "quantitative"}

        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": 3,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country name", "type": "nominal"}


    }
    }
  ]
}
