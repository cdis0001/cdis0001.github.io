{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 400,
  "height": 500,
  "title": "Happiness Score 2020",
  "data": {
    "url": "https://raw.githubusercontent.com/cdis0001/cdis0001.github.io/main/js/ne_110m.json",
    "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"}
  },
  
  "transform": [{
      "lookup": "properties.SUBUNIT",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/cdis0001/vega_lite_FIT3179/main/data/2020.csv"
        },
        "key": "Country name",
        "fields": ["Score"]
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Score",
      "type": "quantitative"
    },
    "tooltip": [
      {"field": "properties.SUBUNIT", "type": "nominal", "title": "Country"},
      {"field": "Score", "type": "quantitative"}
    ]
  }

}
